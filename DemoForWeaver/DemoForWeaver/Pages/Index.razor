@page "/"

<PageTitle>Index</PageTitle>

<h1 style="text-align:center;">Weaver Standards Search Engine</h1>

<label for="exampleDataList" class="form-label">Enter Weaver Standard Here:</label>
<input @bind="@bind" class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
<datalist  id="datalistOptions">
  
  <option value="2.1"/>
 
</datalist>

<hr />

<button style="align-items:center;" @onclick="@search" type="button" class="btn btn-primary">Search</button>

<br />

<h1>@output</h1>

@code{

    public string output{get; set;}

    public string bind{ get; set; }

    public void search()
    {
        if(bind == "2.1")
        {
            output = "This standard corresponds to NIST 6.7";
        }
        else
        {
            output = "No Results Found!!";
        }
    }


}